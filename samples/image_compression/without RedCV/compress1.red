view win: layout [
	title "Compress/Uncompress Images with Red"
	button "Compress/Uncompress Image" [processImg]
	f: field 200
	pad 220x0
	button "Quit" [quit]
	return
	text 120 "Source" f0: field 100
	text 120 "Compressed" f1: field 100
	text 120 "Uncompressed" f2: field 100
	return
	
	b1: base 230x240 smiley
	b2: base 230x240 img1
	b3: base 230x240 img2
]



