smiley: make image! reduce [23x24 rgb]
img1: make image! reduce [23x24 black]
img2: make image! reduce [23x24 black]

;ZLib Compression as a routine
compressRGB: routine [ rgb [string!] return: [binary!]
	/local 
	byte-count
	data
	buffer 
	] [
	byte-count: 0
	data: as c-string! string/rs-head rgb
	buffer: zlib/compress (as byte-ptr! data) ((length? data) + 1) :byte-count Z_DEFAULT_COMPRESSION
	if buffer = NULL [print "Error" lf]
	as red-binary! stack/set-last as red-value! binary/load buffer byte-count
]


decompressRGB: routine [ rgb [string!] bCount [integer!] return: [binary!]
	/local 
	data
	buffer 
	] [
	data: as c-string! string/rs-head rgb
	buffer: zlib/decompress as byte-ptr! data bCount
	as red-binary! stack/set-last as red-value! binary/load buffer bCount
]

processImg: does [
	n: length? rgb
	f0/text: rejoin [form n " bytes"]
	result: compressRGB rgb
	img1/rgb: copy result
	n1: length? result
	f1/text: rejoin [form length? result " bytes"]
	result2: decompressRGB result n
	f2/text: rejoin [form length? result2 " bytes"]
	img2/rgb: copy result2	
	compression: 100 - (100 * n1 / n)
	f/text: rejoin [" Compression: " form compression]
	append f/text " %"
]

